<form class="formstyle" method="post" action="/callout_sanitation_schedule">
    <div class="block">
        <div class="title">
                <h4>Daily Callout and Sanitation Schedule</h4>
        </div>
        <div class="form-container">
            <div class="input-field">Technician Name
                <input id="technician_name" name="technician_name" type="text" required>
            </div>
            <div class="input-field">Region
                <input id="region" name="region" type="text" required>
            </div>
            
            <div class="input-field">Date
                <input id="date" name="date" type="date"/ required>
            </div>
            <div class="input-field">Market
                <input id="market" name="market" type="text" required>
            </div>
        </div>

        <table class="fancy-table">
            <tr>
                <th>No</th>
                <th>Outlet Name</th>
                <th>Service/callout/INS/UPG/REM</th>
                <th>Comments</th>
                <th>Time in</th>
                <th>Time out</th>
            </tr>
            <!-- Generate rows with inputs -->
            <!-- Using JavaScript to avoid repetition in HTML -->
            <script>
                for (let i = 1; i <= 8; i++) {
                    document.write('<tr>');
                        document.write(`<td>${i}</td>`);
                    for (let j = 1; j <= 5; j++) {

                        if(j===2){
                            document.write(`<td><select id="action_typerow${i}col${j}" name="action_typerow${i}col${j}"><option value="Service">Service</option><option value="Callout">Callout</option><option value="INS">INS</option><option value="UPG">UPG</option><option value="REM">REM</option><option value="sixth" selected>none</option></select></td>`)
                        }
                        else if(j===4 || j===5){
                            document.write(`<td><input required id="appt-timerow${i}col${j}" type="time" name="appt-timerow${i}col${j}"></td>`);
                        }
                        else
                        {
                            document.write(`<td><input required type="text" id="row${i}col${j}" name="row${i}col${j}"></td>`);
                        }
                    }
                    document.write('</tr>');
                }
            </script>
        </table>   
        <div class="btnstyle">
            <button type="submit">Save</button>
        </div>     
    </div>

</form>
