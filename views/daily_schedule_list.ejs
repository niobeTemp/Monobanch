        body {
    font-family: 'Arial', sans-serif; /* Ensures the font is clean and readable */
    
    background: #f4f4f9; /* Light grey background for slight contrast */
}

.fancy-table {
    width: 80%;
    margin: 0 auto; /* Centering the table */
    border-collapse: collapse; /* Removes the space between borders */
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.15); /* Adds a subtle shadow to the table */
}

.fancy-table thead th {
    background-color: #55608f; /* A deep blue shade for header background */
    color: #ffffff; /* White text color */
    text-transform: uppercase; /* Makes the header text uppercase */
    padding: 12px 15px; /* Spacious padding for aesthetic spacing */
}

.fancy-table tbody td {
    padding: 12px 15px; /* Consistent padding with header for alignment */
    color: #333333; /* Darker text color for contrast */
    border-bottom: 1px solid #dddddd; /* Light border for subtle row separation */
}

.fancy-table tbody tr:nth-child(even) {
    background-color: #f3f3f3; /* Zebra striping for rows */
}

.fancy-table tbody tr:hover {
    background-color: #f1f1f1; /* Hover effect for each row */
    cursor: pointer; /* Changes the cursor on row hover */
}

/* Responsive adjustments */
@media screen and (max-width: 600px) {
    .fancy-table {
        width: 100%; /* Full width for smaller screens */
    }
}

